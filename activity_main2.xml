<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/button"
        android:layout_width="138dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/analyze"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:onClick="analyzeHandler"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/raleway_light"
        android:text="@string/textview"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:onClick="passiveAggressiveHandler"
        android:clickable="true"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="366dp"
        android:layout_height="43dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/outline"
        android:ems="10"
        android:fontFamily="@font/raleway_light"
        android:inputType="text"
        android:text="@string/editText"
        android:textAlignment="textStart"
        android:textSize="30sp"
        android:windowSoftInputMode="stateVisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="editTextHandler"
        android:clickable="true"
        android:focusable="true"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_more_rounded"
        android:fontFamily="sans-serif-light"
        android:onClick="switchScreen"
        android:text="@string/button4"
        android:textAlignment="inherit"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="349dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/raleway_light"
        android:text="@string/textview"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:onClick="readabilityHandler"
        android:clickable="true"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="347dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/raleway_light"
        android:text="@string/textview"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:onClick="formalityHandler"
        android:clickable="true"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="346dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/raleway_light"
        android:text="@string/textview"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:onClick="punctuationHandler"
        android:clickable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>
